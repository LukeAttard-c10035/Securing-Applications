@model IEnumerable<Application.ViewModels.FileTransferViewModel>

@{
    ViewData["Title"] = "Details";
}

<h1>File Transfers</h1>

<div>
    <hr />
@foreach (var item in Model) {
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(modelItem => item.UserEmail)
        </dd>
            @if(item.AuthorizedUsers != null)
            {
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.AuthorizedUsers)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(modelItem => item.AuthorizedUsers)
                </dd>
            }

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FileName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(modelItem => item.FileName)
        </dd>
            @if(item.ExpiryDate != null)
            {
                 <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.ExpiryDate)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(modelItem => item.ExpiryDate)
                </dd>
            }


        <dd class = "col-sm-10">
            <a asp-action="Download" asp-route-fileTransferId="@item.Id">Download File</a>
        </dd>
    </dl>
}
</div>
<div>
    <a asp-action="Create">Send File Transfer</a>
</div>
