@model IEnumerable<Application.ViewModels.FileTransferViewModel>

@{
    ViewData["Title"] = "Details";
}

<h1>File Transfers</h1>

<div>
    <hr />
@foreach (var item in Model) {
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(modelItem => item.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(modelItem => item.UserEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorizedUsers)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(modelItem => item.AuthorizedUsers)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FilePath)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(modelItem => item.FilePath)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExpiryDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(modelItem => item.ExpiryDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.isExpired)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(modelItem => item.isExpired)
        </dd>
        <dd class = "col-sm-10">
            <a href ="@Html.DisplayFor(modelItem => item.FilePath)">Download Zip</a>
        </dd>
        <dd class = "col-sm-10">
            <a asp-action="Download" asp-route-id="@item.Id">View your File Transfers</a>
        </dd>
    </dl>
}
</div>
<div>
    <a asp-action="Create">Send File Transfer</a>
</div>
